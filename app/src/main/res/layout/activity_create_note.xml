<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="12dp"
        android:text="Create new book"
        android:textColor="@color/primaryButton"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="New book for - date"
        android:textColor="@color/textHint"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Book Title:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Enter book title"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/textHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Author:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Enter author name"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/textHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Number of Pages:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextBookPages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Enter number of pages"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="@color/textHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current Page:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextCurrentPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Enter current page number"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="@color/textHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reading Status:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerReadingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rating (1-5):"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Review:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextReview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="top|start"
                android:hint="Write your review..."
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/textHint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description:"
                android:textColor="@color/textHint"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextNote"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background"
                android:gravity="top|start"
                android:hint="Enter book description..."
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/textHint" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primaryButton"
            android:text="Save"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primaryButton"
            android:text="Clear"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primaryButton"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primaryButton"
            android:text="Home"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
