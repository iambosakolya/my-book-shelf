<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Button Styles -->
    <style name="Widget.ModernApp.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <style name="Widget.ModernApp.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">1dp</item>
    </style>
    
    <style name="Widget.ModernApp.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.ModernApp.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- EditText Styles -->
    <style name="Widget.ModernApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/lightGray</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
    
    <!-- Rating Bar Style -->
    <style name="Widget.ModernApp.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressBackgroundTint">@color/lightGray</item>
    </style>
</resources> 